SELECT A.ID, A.DESCRIPTION, B.NAME
FROM ISSUES A
JOIN ISSUESLIST B ON A.ID = B.ID;

SELECT A.ID, A.DESCRIPTION, B.FIRSTNAME, B.LASTNAME
FROM ISSUES A
JOIN USERS B ON A.ID = B.ID;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS TASK_NUMBER
FROM USERS U
JOIN ISSUES I ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY I.USER_ID_ASSIGNEDTO
HAVING COUNT(*) > 0;
